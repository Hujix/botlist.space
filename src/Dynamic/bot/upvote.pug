extends ../layout.pug

block scripts
	script(type='text/javascript' src='/js/upvote' + min + '.js')

block content
	.container
		.alert.alert-success#success-alert.d-none(role='alert') You have successfully upvoted this bot.
		.alert.alert-danger#already-voted-alert.d-none(role='alert') You have already upvoted this bot in the last 24 hours.
	.jumbotron.bg-transparent.bot-card
		.container
			.row
				.col-lg-3
					if bot.avatar_child_friendly
						img.main-image(src=avatarURL(bot) onerror=onerror alt=bot.username + '\'s Avatar')
					else
						img.main-image.blur(src=avatarURL(bot) onerror=onerror draggable='false' alt=bot.username + '\'s Avatar')
				.col-lg-9
					.vertical-align
						span.card-title
							h1 #{bot.username}
							span(class='status ' + bot.status title=bot.status.charAt(0).toUpperCase() + bot.status.slice(1))
						p.mb-5 #{bot.short_description}
			hr
			.stats-list
				span
					button.btn.btn-dark.btn-green.btn-large#upvote Upvote Bot
				span You are logged in as #{user.username}##{user.discriminator}.
			hr